# استخدام صورة رسمية من Node.js
FROM node:20.16.0

# إنشاء دليل العمل داخل الحاوية
WORKDIR /app

# نسخ ملفات المشروع إلى الحاوية
COPY package*.json ./

# تثبيت التبعيات
RUN npm install

# نسخ باقي ملفات المشروع
COPY . .

# فتح المنفذ 3000 الذي يعمل عليه التطبيق
EXPOSE 5000

# الأمر الذي يقوم بتشغيل التطبيق
CMD ["npm", "start"]
